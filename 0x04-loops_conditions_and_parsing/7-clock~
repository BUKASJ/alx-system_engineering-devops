#!/usr/bin/env bash
#a Bash script that displays the time for 12 hours and 59 minutes:
#using a while loop
#display hours from 0 to 12
#display minutes from 1 to 59

hour=0
minute=1

while [ $hour -lt 13 ]; do
if [ $hour -lt 10 ]; then
echo "0$hour:$minute"
else
echo "$hour:$minute"
fi

minute=$((minute+1))

if [ $minute -eq 60 ]; then
minute=1
hour=$((hour+1))
fi
done | head -n 70
